<div class="container jumbotron">
    <a href="/dare">Back Home</a>
</div>

<div class="container">
    <div class="title">
        <h1 class="display-4">Dares Awaiting Approval</h1>
    </div>
    <div class="container">
        <div class="row">
            {{#each dares}}
            <div class="col-3 await">
                <h5 class="card-title">{{name}}</h5>
                <hr>
                <p class="card-text">{{description}}</p>
                <p class="card-text">{{value}}</p>
                <button  id="{{id}}" class="awaitDelete btn btn-primary">Approve</button>
                <button  id="{{id}}" class="notApproved btn btn-primary">Not Approved</button>
            </div>
            {{/each}}
        </div>
    </div>
</div>